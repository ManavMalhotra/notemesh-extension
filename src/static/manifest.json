{
  "manifest_version": 3,
  "name": "NoteMesh ",
  "description": "NoteMesh - take notes on any website",
  "version": "1.0.0",
  "action": {
    "default_popup": "popup.html",
    "default_title": "NoteMesh",
    "default_icon": "icon.png"
  },
  "permissions": ["tabs", "bookmarks", "storage", "identity", "activeTab", "scripting"],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"]
    }
  ]
}
